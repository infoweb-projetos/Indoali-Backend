// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Usuario {
  id              Int      @id @default(autoincrement())
  email           String   @unique
  name            String?
  userName        String   @unique
  descricao       String   @default("Olá, eu gosto muito de rolês")
  datacriacao     DateTime @default(now())
  senha           String
}

model Lugare {
  id              Int      @id @default(autoincrement())
  descricao       String?
  name            String
  endereco        String   
}

model Favorito {
  id              Int      @id @default(autoincrement())
  id_usuario      Int      
  id_lugar        Int      
}

model Amizade {
  id              Int      @id @default(autoincrement())
  id_emissor      Int      
  id_receptor     Int      
  aceito          Boolean  @default(false)
}

model endereco {
  id              Int      @id @default(autoincrement())
  rua             String
  numero          Int
  cidade          String
  bairro          String
  estado          String
  nome            String
  detalhes        String?
  id_usuario      Int
}